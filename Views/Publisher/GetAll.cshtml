@model IEnumerable<OnlineBookStore.Models.Domain.Publisher>
@{
    //ViewData["Title"] = "Add";
}
<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Publisher/Add">Add more</a>
        </div>
    </div>
<div class="row">
<div class="col-md-6">
    <h3>Add Publisher</h3>
    <table class="table table-striped table-bordered table-dark">
        <thead>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.PublisherName</td>
                            <td>
                                <a class="btn btn-success" href="/Publisher/Update?id=@item.Id"><i class="bi bi-pen"></i></a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Publisher/Delete?id=@item.Id"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
        </tbody>
    </table>

</div>
</div>
</div>

